.container {
  display: flex;
  flex-direction: column;
}
.container .header {
  display: flex;
  justify-content: space-between;
  height: 86rpx;
}
.container .header image {
  width: 50rpx;
  height: 50rpx;
}
.container .main {
  flex: 1;
}
.container .main .swiper-container {
  width: 100%;
  height: 290rpx;
}
.container .main .swiper-container .swiper-item {
  width: 100%;
  height: 100%;
}
.container .main .swiper-container .swiper-item image {
  width: 100%;
}
.container .main .tab-container {
  display: flex;
  padding: 0 20rpx;
  height: 70rpx;
}
.container .main .tab-container .tab-item {
  flex: 1;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  border-color: 1px solid #ebebeb;
}
.container .main .tab-container .tab-item.active {
  border-color: 1px solid red;
}
.container .main .goods-container {
  padding: 0 20rpx;
}
.container .main .goods-container .good-item {
  display: flex;
  width: 100%;
  height: 300rpx;
}
.container .main .goods-container .good-item image {
  width: 240rpx;
  height: 240rpx;
}
.container .main .goods-container .good-item .good-content {
  flex: 1;
  place-content: 20rpx;
}
.container .main .goods-container .good-item .good-content .title {
  font-size: 36rpx;
}
.container .main .goods-container .good-item .good-content .price {
  color: red;
}
.container .main .goods-container .good-item .good-content .buy-btn {
  width: 164rpx;
  height: 50rpx;
  background-color: #f26b11;
  border-radius: 4rpx;
}
.container .main .nav-container {
  display: flex;
  padding: 20rpx 0;
}
.container .main .nav-container .nav-item {
  flex: 1;
  text-align: center;
}
.container .footer {
  height: 122rpx;
}

